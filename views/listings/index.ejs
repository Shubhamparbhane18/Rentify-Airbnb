<% layout("layouts/boilerplate") %>
<body>
  <h3>All Listings</h3>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) { %>
      
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="listing-card col">
          <img src="<%= listing.image?.url && listing.image.url.trim() !== '' 
        ? listing.image.url 
        : 'https://images.unsplash.com/photo-1586810724476-c294fb7ac01b?q=80&w=436&auto=format&fit=crop' %>" class="card-img-top" style="height:200px;" alt="listing_image">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
            </p>
          </div>
        </div>
      </a>

    <% } %>
  </div>

</body>
