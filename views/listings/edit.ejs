<% layout("layouts/boilerplate")%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit listing</h3>

    <form method="POST" action="/listings/<%= listing._id%>?_method=PUT">
      <div class="mb-3">
        <label for="title" class="form-label">title</label>
        <input type="text" name="listing[title]" 
        value="<%= listing.title %>" class="form-control">
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">description</label>
        <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea>
      </div>
      
      <div class="mb-3">
        <label for="image" class="form-label">image</label>
        <input type="text" name="listing[image]" class="form-control" value="<%= listing.image.url %>">
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          
          <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>">
          
        </div>
        
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">country</label>
          <input type="text" name="listing[country]"class="form-control" value="<%= listing.country %>">
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">location</label>
        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control">
      </div>
      <button style="color:white; background-color: #fe424d; border:none;" class="mt-3">Edit</button>
    </form>
    <br><br>
  </div>
</div>
</body>
</html>
